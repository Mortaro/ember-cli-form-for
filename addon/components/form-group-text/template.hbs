<div class="form-group">
  <label>
    {{label}}
    {{#if required}}
      <abbr>*</abbr>
    {{/if}}
  </label>
  {{input
    value=(get model attr)
    class=(concat "form-control " (if error 'is-invalid'))
    focus-out=onchange
    disabled=disabled
    placeholder=(if placeholder placeholder mask)
  }}
  {{#if error}}
    <div class="invalid-feedback">
      {{error}}
    </div>
  {{/if}}
</div>

<div class="form-group">
  <label>
    {{label}}
    {{#if required}}
      <abbr>*</abbr>
    {{/if}}
  </label>
  <div class="input-group">
    {{#if prependText}}
      <div class="input-group-prepend">
        <span class="input-group-text rounded-0">{{prependText}}</span>
      </div>
    {{/if}}
    {{input
      value=(get model attr)
      class=(concat "form-control " (if error 'is-invalid'))
      focus-out=onchange
      disabled=disabled
      placeholder=(if placeholder placeholder mask)
    }}
    {{#if appendText}}
      <div class="input-group-append">
        <span class="input-group-text rounded-0">{{appendText}}</span>
      </div>
    {{/if}}
  </div>
  {{#if error}}
    <div class="invalid-feedback">
      {{error}}
    </div>
  {{/if}}
</div>

<div class="form-group">
  <label>
    {{label}}
    {{#if required}}
      <abbr>*</abbr>
    {{/if}}
  </label>
  {{pikaday-input class=(if error 'is-invalid') value=(readonly (get model attr)) onSelection=(action 'setValue') format="DD/MM/YYYY" class="form-control" useUTC=true disabled=disabled}}
  {{#if error}}
    <div class="invalid-feedback">
      {{error}}
    </div>
  {{/if}}
</div>

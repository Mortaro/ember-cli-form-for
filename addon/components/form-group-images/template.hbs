<div class="form-group">
  <label>
    {{label}}
    {{#if required}}
      <abbr>*</abbr>
    {{/if}}
    {{#if help}}
      <abbr class="tip">
        ?
        <p class="m-0 pl-1 pr-1">{{help}}</p>
      </abbr>
    {{/if}}
  </label>
  {{#unless disabled}}
    <div class="custom-file">
      <input type="file" class="custom-file-input" multiple="true" onchange={{action "changeFileInput"}}>
      <label class="custom-file-label" for="customFile">
        {{#if uploadQueue}}
          <i class="fa fa-spinner fa-pulse"></i>
        {{else}}
          Escolher Imagens
        {{/if}}
      </label>
    </div>
  {{/unless}}
  {{#if (gt attachments.length 0)}}
    {{#each attachments as |attachment|}}
      <div class="mt-3 mr-3" style="background-image: url({{attachment.link}}); background-size: cover; background-position: center; height: 120px; width: 180px; position: relative; display: inline-block;">
        <a href="{{attachment.link}}" target="_blank"></a>
        {{#unless disabled}}
          <button class="btn btn-secondary btn-xs" {{action 'removeAttachment' attachment}}>
            <i class="far fa-trash-alt"></i>
          </button>
        {{/unless}}
      </div>
    {{/each}}
  {{else}}
    <p>Nenhuma Imagem Cadastrada</p>
  {{/if}}
  {{#if error}}
    <div class="invalid-feedback">
      {{error}}
    </div>
  {{/if}}
</div>

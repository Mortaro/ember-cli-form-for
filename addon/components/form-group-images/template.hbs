<div class="form-group">
  <label>
    {{label}}
    {{#if required}}
      <abbr>*</abbr>
    {{/if}}
  </label>
  {{#unless disabled}}
    <div class="custom-file">
      <input type="file" class="custom-file-input" multiple="true" onchange={{action "changeFileInput"}}>
      <label class="custom-file-label" for="customFile">
        {{#if uploadQueue}}
          <i class="fa fa-spinner fa-pulse"></i>
        {{else}}
          Escolher Imagens
        {{/if}}
      </label>
    </div>
  {{/unless}}
  {{#if (gt attachments.length 0)}}
    <table class="table table-bordered attachment">
      <tbody>
        {{#each attachments as |attachment|}}
          <tr>
            <td>
              {{attachment.fileName}}
              <div class="thumb" style="background-image: url({{attachment.link}})">
                <a href={{attachment.link}} target="_blank"></a>
              </div>
            </td>
            {{#unless disabled}}
              <td class="table-actions">
                <button class="btn btn-secondary btn-xs" {{action 'removeAttachment' attachment}}>
                  <i class='fa fa-trash-o'></i>
                </button>
              </td>
            {{/unless}}
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>Nenhuma Imagem Cadastrada</p>
  {{/if}}
  {{#if error}}
    <div class="invalid-feedback">
      {{error}}
    </div>
  {{/if}}
</div>

<div class="form-group">
  <label>
    {{label}}
    {{#if required}}
      <abbr>*</abbr>
    {{/if}}
  </label>
  <div class="form-control p-0 {{if error 'is-invalid'}}">
    {{summernote-editor
      focus=false
      btnSize=bs-sm
      airMode=false
      height=200
      buttons=buttons
      toolbar=toolbar
      disabled=disabled
      callbacks=callbacks
      content=(get model attr)
      onContentChange=(action 'setValue')
    }}
    <!--{ {pell-editor value=(get model attr) onChange=(action 'setValue') pellOptions=options disabled=disabled}}-->
  </div>
  {{#if error}}
    <div class="invalid-feedback">
      {{error}}
    </div>
  {{/if}}
</div>

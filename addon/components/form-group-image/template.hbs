<div class="form-group">
  <label>
    {{label}}
    {{#if required}}
      <abbr>*</abbr>
    {{/if}}
  </label>
  {{#unless disabled}}
    <div class="custom-file">
      <input type="file" class="custom-file-input" onchange={{action "changeFileInput"}}>
      <label class="custom-file-label" for="customFile">
        {{#if uploadQueue}}
          <i class="fa fa-spinner fa-pulse"></i>
        {{else}}
          Escolher Imagens
        {{/if}}
      </label>
    </div>
  {{/unless}}
  {{#if (get model attr)}}
    <div class="mt-3 mr-3" style="background-image: url({{get model attr}}); background-size: cover; background-position: center; height: 120px; width: 180px; position: relative; display: inline-block;">
      <a href="{{get model attr}}" target="_blank"></a>
      {{#unless disabled}}
        <button class="btn btn-secondary btn-xs" {{action 'clear'}}>
          <i class="far fa-trash-alt"></i>
        </button>
      {{/unless}}
    </div>
  {{/if}}
  {{#if error}}
    <div class="invalid-feedback">
      {{error}}
    </div>
  {{/if}}
</div>
